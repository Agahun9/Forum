{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<br>





    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content animated fadeInRight">

                    <div class="ibox-content m-b-sm border-bottom">
                        <div class="p-xs">
                            <div class="pull-left m-r-md">
                                <i class="fa fa-globe text-navy mid-icon"></i>
                            </div>
                            <h2>Welcome to our forum</h2>
                            <span>Feel free to choose topic you're interested in.</span>
                            <div class="pull-right m-r-md">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a href="{{ path('app_logout') }}">logout</a>
                                    {% else %}
                                <a href="{{ path('app_login') }}">Login</a>
                                <a href="{{ path('app_register') }}">Register</a>

                                {% endif %}

                            </div>
                        </div>
                    </div>

                    <div class="ibox-content forum-container">

                        <div class="forum-title">
                            <div class="pull-right forum-desc">
                                <samll>Total posts: XXXX</samll>
                            </div>
                            <a href="{{ path('addcategory') }}">AddCategory</a>
                            <h3>General subjects</h3>
                        </div>
                        {% for category in categories %}


                        <div class="forum-item active">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="forum-icon">
                                        <i class="fa fa-shield"></i>
                                    </div>
                                    <a href="/category/{{ category.id }}" class="forum-item-title">{{ category.name }}</a>
                                    <div class="forum-sub-title">{{ category.description }}</div>
                                </div>
                                <div class="col-md-1 forum-info">
                            <span class="views-number">
                                YYYYY
                            </span>

                                    <div>
                                        <small>Topics</small>
                                    </div>
                                </div>
                                <div class="col-md-1 forum-info">
                            <span class="views-number">
                                XXXXXXXXXXX
                            </span>
                                    <div>
                                        <small>Posts</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}


                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
